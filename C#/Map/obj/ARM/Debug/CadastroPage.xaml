<Page x:ConnectionId='1'
    x:Class="Map.CadastroPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Map"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton x:ConnectionId='2' x:Name="btSalvar" Icon="Accept" Label="Salvar"                       />
            <AppBarButton x:ConnectionId='3' x:Name="btCancelar" Icon="Cancel" Label="Cancelar"                         />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:ConnectionId='4' x:Name="textBlock" HorizontalAlignment="Left" Margin="12,12,0,0" Text="Reclamação" Style="{StaticResource HeaderTextBlockStyle}" VerticalAlignment="Top"/>
        <StackPanel Grid.Row="1" Margin="12,0,0,0">

            <TextBox x:ConnectionId='5' x:Name="textTitulo" TextWrapping="Wrap" Width="300" HorizontalAlignment="Left" Header="Título:"                                                                                                    />
            <TextBox x:ConnectionId='6' x:Name="dataTXt" Header="Data"                                                              HorizontalAlignment="Left" Width="298" />
            <TextBox x:ConnectionId='7' x:Name="textBairro" TextWrapping="Wrap" Header="Bairro:" Width="200" HorizontalAlignment="Left"                                                               />
            <TextBox x:ConnectionId='8' x:Name="textCategoria" TextWrapping="Wrap" Header="Categoria:" Width="200" HorizontalAlignment="Left"                                                                  />
            <TextBox x:ConnectionId='9' x:Name="textBoxDescricao" TextWrapping="Wrap" Header="Descrição:" Width="300" HorizontalAlignment="Left" Height="273"                                                             />
            <TextBlock x:ConnectionId='10' x:Name="textBlock1" TextWrapping="Wrap" Text="TextBlock"/>
        </StackPanel>
    </Grid>
</Page>

