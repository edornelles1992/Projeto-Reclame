<Application
    x:Class="Map.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Map"
    RequestedTheme="Light">
    
    <Application.Resources>
        <DataTemplate x:Key="ReclamacaoListViewDataTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Border BorderBrush="Black" BorderThickness="1" Width="100" Height="100" Background="#FF8A8A8A">
                    <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="{Binding IdReclamacao}" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                </Border>
                <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Text="{Binding Titulo}" VerticalAlignment="Center"  Grid.Column="1" HorizontalAlignment="Left" FontSize="18.667" Margin="12,0,0,0"/>
        
            </Grid>
        </DataTemplate>
    </Application.Resources>

</Application>
